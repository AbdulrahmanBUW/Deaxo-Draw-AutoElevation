<Window x:Class="Deaxo.AutoElevation.UI.ElevationModeSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DEAXO Auto Elevation - Mode Selection"
        Width="545" Height="348"
        WindowStartupLocation="CenterScreen"
        Background="#FFFFFF"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- iOS-like color palette -->
        <SolidColorBrush x:Key="iOSBlue" Color="#007AFF"/>
        <SolidColorBrush x:Key="iOSGreen" Color="#34C759"/>
        <SolidColorBrush x:Key="iOSGray" Color="#6C757D"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#222222"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#666666"/>

        <!-- Reusable rounded button template -->
        <Style x:Key="RoundedButtonBase" TargetType="Button">
            <Setter Property="Height" Value="48"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.95"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.92"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Concrete colored styles using the base -->
        <Style x:Key="BlueButton" TargetType="Button" BasedOn="{StaticResource RoundedButtonBase}">
            <Setter Property="Background" Value="{StaticResource iOSBlue}"/>
        </Style>

        <Style x:Key="GreenButton" TargetType="Button" BasedOn="{StaticResource RoundedButtonBase}">
            <Setter Property="Background" Value="{StaticResource iOSGreen}"/>
        </Style>

        <Style x:Key="GrayButton" TargetType="Button" BasedOn="{StaticResource RoundedButtonBase}">
            <Setter Property="Background" Value="{StaticResource iOSGray}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,6">
            <TextBlock Text="Choose elevation mode"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimary}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Pick one of the modes below"
                       FontSize="12"
                       Foreground="{StaticResource TextSecondary}"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Mode buttons in the middle -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="420">
            <Button Content="Group Elevation"
                    Style="{StaticResource BlueButton}"
                    Click="GroupElement_Click"
                    Margin="0,0,0,12"/>
            <Button Content="Internal Elevation"
                    Style="{StaticResource GreenButton}"
                    Click="InternalElevation_Click"/>
        </StackPanel>

        <!-- Footer: Cancel -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Width="120"
                    Height="36"
                    Margin="0,8,0,0"
                    Style="{StaticResource GrayButton}"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
