<Window x:Class="Deaxo.AutoElevation.UI.ElevationModeSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DEAXO Auto Elevation - Mode Selection"
        Height="850" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Modern Card Style with Hover Effects -->
        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" Direction="270" ShadowDepth="4" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#007AFF"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="16" Direction="270" ShadowDepth="6" Opacity="0.15"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Enhanced Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="24,12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Icon Style -->
        <Style x:Key="IconStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Feature List Style -->
        <Style x:Key="FeatureTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#6C757D"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </Window.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Enhanced Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,40" HorizontalAlignment="Center">
            <!-- Company Logo/Brand -->
            <Border Background="#007AFF" CornerRadius="8" Padding="16,8" Margin="0,0,0,20" HorizontalAlignment="Center">
                <TextBlock Text="DEAXO" FontSize="16" FontWeight="Bold" Foreground="White"/>
            </Border>

            <TextBlock Text="Auto Elevation Tool" 
                       FontSize="32" 
                       FontWeight="Light" 
                       Foreground="#212529" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,8"/>
            <TextBlock Text="Choose the elevation mode that best fits your workflow" 
                       FontSize="16" 
                       Foreground="#6C757D" 
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Enhanced Mode Cards -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Single Element Card -->
            <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Icon and Title -->
                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Ellipse Style="{StaticResource IconStyle}" Fill="#E3F2FD"/>
                        <Ellipse Width="40" Height="40" Fill="#007AFF" Margin="-50,-50,0,0"/>
                        <TextBlock Text="📐" FontSize="24" HorizontalAlignment="Center" Margin="-40,-35,0,0"/>

                        <TextBlock Text="Single Element" 
                                   FontSize="22" 
                                   FontWeight="SemiBold" 
                                   Foreground="#007AFF" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,8,0,4"/>
                        <TextBlock Text="Detail Elevation" 
                                   FontSize="14" 
                                   Foreground="#6C757D" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Description and Features -->
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Creates individual elevation views for each selected element with precise detail focus." 
                                   FontSize="14" 
                                   TextWrapping="Wrap" 
                                   Foreground="#495057" 
                                   TextAlignment="Center"
                                   LineHeight="20"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Perfect for:" 
                                   FontSize="13" 
                                   FontWeight="SemiBold" 
                                   Foreground="#212529" 
                                   Margin="0,0,0,8"/>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="• Walls and structural elements" Style="{StaticResource FeatureTextStyle}"/>
                            <TextBlock Text="• Large furniture and fixtures" Style="{StaticResource FeatureTextStyle}"/>
                            <TextBlock Text="• Detailed construction drawings" Style="{StaticResource FeatureTextStyle}"/>
                            <TextBlock Text="• Individual element documentation" Style="{StaticResource FeatureTextStyle}"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Grid.Row="2" 
                            Content="Select Single Element" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Background="#007AFF"
                            Click="SingleElement_Click"/>
                </Grid>
            </Border>

            <!-- Group Element Card -->
            <Border Grid.Column="1" Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Icon and Title -->
                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Ellipse Style="{StaticResource IconStyle}" Fill="#FFF3E0"/>
                        <Ellipse Width="40" Height="40" Fill="#FF6B35" Margin="-50,-50,0,0"/>
                        <TextBlock Text="🏗️" FontSize="24" HorizontalAlignment="Center" Margin="-40,-35,0,0"/>

                        <TextBlock Text="Group Element" 
                                   FontSize="22" 
                                   FontWeight="SemiBold" 
                                   Foreground="#FF6B35" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,8,0,4"/>
                        <TextBlock Text="General Elevation" 
                                   FontSize="14" 
                                   Foreground="#6C757D" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Description and Features -->
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Creates elevation views around all selected elements as a group." 
                                   FontSize="14" 
                                   TextWrapping="Wrap" 
                                   Foreground="#495057" 
                                   TextAlignment="Center"
                                   LineHeight="20"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Perfect for:" 
                                   FontSize="13" 
                                   FontWeight="SemiBold" 
                                   Foreground="#212529" 
                                   Margin="0,0,0,8"/>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="• MEP systems and components" Style="{StaticResource FeatureTextStyle}"/>
                            <TextBlock Text="• Pipe fittings and accessories" Style="{StaticResource FeatureTextStyle}"/>
                            <TextBlock Text="• Equipment room layouts" Style="{StaticResource FeatureTextStyle}"/>
                            <TextBlock Text="• Multiple small elements" Style="{StaticResource FeatureTextStyle}"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Grid.Row="2" 
                            Content="Select Group Element" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Background="#FF6B35"
                            Click="GroupElement_Click"/>
                </Grid>
            </Border>

            <!-- Internal Elevation Card -->
            <Border Grid.Column="2" Style="{StaticResource ModernCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Icon and Title -->
                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Ellipse Style="{StaticResource IconStyle}" Fill="#E8F5E8"/>
                        <Ellipse Width="40" Height="40" Fill="#34C759" Margin="-50,-50,0,0"/>
                        <TextBlock Text="🏠" FontSize="24" HorizontalAlignment="Center" Margin="-40,-35,0,0"/>

                        <TextBlock Text="Internal" 
                                   FontSize="22" 
                                   FontWeight="SemiBold" 
                                   Foreground="#34C759" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,8,0,4"/>
                        <TextBlock Text="Elevation" 
                                   FontSize="14" 
                                   Foreground="#6C757D" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Description and Features -->
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Creates elevation views from inside walls and curtain walls, showing interior surfaces and hosted elements." 
                                   FontSize="14" 
                                   TextWrapping="Wrap" 
                                   Foreground="#495057" 
                                   TextAlignment="Center"
                                   LineHeight="20"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Perfect for:" 
                                   FontSize="13" 
                                   FontWeight="SemiBold" 
                                   Foreground="#212529" 
                                   Margin="0,0,0,8"/>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="• Interior wall surfaces" Style="{StaticResource FeatureTextStyle}"/>
                            <TextBlock Text="• Curtain wall interior views" Style="{StaticResource FeatureTextStyle}"/>
                            <TextBlock Text="• Hosted elements perspective" Style="{StaticResource FeatureTextStyle}"/>
                            <TextBlock Text="• Interior design documentation" Style="{StaticResource FeatureTextStyle}"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Grid.Row="2" 
                            Content="Select Internal" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Background="#34C759"
                            Click="InternalElevation_Click"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Enhanced Footer -->
        <Grid Grid.Row="2" Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Help Text -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="💡 Tip: Each mode creates elevation views with automatically generated sheets" 
                           FontSize="12" 
                           Foreground="#6C757D" 
                           Margin="0,0,0,4"/>
                <TextBlock Text="🎯 All elevations can use view templates for consistent formatting" 
                           FontSize="12" 
                           Foreground="#6C757D"/>
            </StackPanel>

            <!-- Cancel Button -->
            <Button Grid.Column="1" 
                    Content="Cancel" 
                    Width="120" 
                    Height="40"
                    Background="#6C757D" 
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Medium"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Cancel_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="20,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A6268"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>