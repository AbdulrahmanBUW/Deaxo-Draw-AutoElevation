<Window x:Class="Deaxo.AutoElevation.UI.BaseNameInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DEAXO Auto Elevation - Base Name"
        Width="520" Height="450"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Main Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="6" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="16,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CED4DA"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="false"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007AFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Style="{StaticResource CardStyle}" Margin="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,5,0,20">
                <Border Background="#007AFF" CornerRadius="4" Padding="10,5" Margin="0,0,0,12" HorizontalAlignment="Center">
                    <TextBlock Text="DEAXO" FontSize="12" FontWeight="Bold" Foreground="White"/>
                </Border>
                <TextBlock Text="Elevation Base Name" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="#212529" 
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Instructions -->
            <TextBlock Grid.Row="1" 
                       Text="Enter a base name for your internal building elevations:" 
                       FontSize="13" 
                       Foreground="#6C757D" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"
                       TextWrapping="Wrap"/>

            <!-- Input Field -->
            <StackPanel Grid.Row="2" Margin="0,0,0,20">
                <TextBlock Text="Base Name:" FontSize="13" FontWeight="Medium" Foreground="#495057" Margin="0,0,0,6"/>
                <TextBox x:Name="BaseNameTextBox" 
                         Style="{StaticResource ModernTextBoxStyle}"
                         Text="Elevation"
                         SelectionStart="0"
                         SelectionLength="9"/>
            </StackPanel>

            <!-- Example text -->
            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <TextBlock FontSize="11" Foreground="#6C757D" HorizontalAlignment="Center" TextAlignment="Center">
                    <Run Text="Example: If you enter"/>
                    <Run Text="'RoomElevation'" FontWeight="SemiBold"/>
                    <LineBreak/>
                    <Run Text="Views will be named: RoomElevation_1, RoomElevation_2, etc."/>
                </TextBlock>
            </StackPanel>

            <!-- Buttons -->
            <Grid Grid.Row="4" Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Content="Cancel" 
                        Width="100" 
                        Background="#6C757D" 
                        Foreground="White"
                        Style="{StaticResource ModernButtonStyle}"
                        Click="Cancel_Click"
                        HorizontalAlignment="Left"/>

                <Button Grid.Column="1" 
                        Content="Continue" 
                        Width="120" 
                        Background="#007AFF" 
                        Foreground="White"
                        Style="{StaticResource ModernButtonStyle}"
                        Click="Continue_Click"
                        IsDefault="True"/>
            </Grid>
        </Grid>
    </Border>
</Window>