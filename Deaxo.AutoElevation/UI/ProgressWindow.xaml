<Window x:Class="Deaxo.AutoElevation.UI.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DEAXO Auto Elevation - Processing"
        Height="500" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        FontFamily="Segoe UI"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Card Style -->
        <Style x:Key="ProgressCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="32"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="25" Direction="270" ShadowDepth="10" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Animated Progress Bar Style -->
        <Style x:Key="ModernProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Background" Value="#E9ECEF"/>
            <Setter Property="Foreground" Value="#007AFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderThickness="0">
                            <Border x:Name="PART_Track"
                                    CornerRadius="4">
                                <Border x:Name="PART_Indicator"
                                        Background="{TemplateBinding Foreground}"
                                        CornerRadius="4"
                                        HorizontalAlignment="Left"/>
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Spinning Animation -->
        <Storyboard x:Key="SpinAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="SpinIcon"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:2"/>
        </Storyboard>
    </Window.Resources>

    <Border Style="{StaticResource ProgressCardStyle}" Margin="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar with Close Button -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Window Title -->
                <TextBlock Grid.Column="0" 
                           Text="DEAXO Auto Elevation - Processing" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="#495057" 
                           VerticalAlignment="Center"/>

                <!-- Close Button -->
                <Button Grid.Column="1" 
                        x:Name="CloseButton"
                        Content="✕" 
                        Width="24" 
                        Height="24"
                        Background="Transparent" 
                        Foreground="#6C757D"
                        FontSize="12"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CloseButton_Click"
                        Visibility="Collapsed">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                    <Setter Property="Foreground" Value="#DC3545"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Header -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,24">
                <!-- Brand -->
                <Border Background="#007AFF" CornerRadius="6" Padding="12,6" Margin="0,0,0,16" HorizontalAlignment="Center">
                    <TextBlock Text="DEAXO" FontSize="14" FontWeight="Bold" Foreground="White"/>
                </Border>

                <!-- Spinning Icon -->
                <Grid Width="60" Height="60" Margin="0,0,0,16">
                    <Ellipse Fill="#E3F2FD" Width="60" Height="60"/>
                    <TextBlock x:Name="SpinIcon" 
                               Text="⚙️" 
                               FontSize="28" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <RotateTransform/>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </Grid>

                <TextBlock Text="Creating Elevations" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Foreground="#212529" 
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Progress Info -->
            <StackPanel Grid.Row="2" Margin="0,0,0,16">
                <TextBlock x:Name="StatusText" 
                           Text="Initializing..." 
                           FontSize="14" 
                           Foreground="#495057" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,8"/>

                <TextBlock x:Name="DetailText" 
                           Text="Please wait while we process your selection" 
                           FontSize="12" 
                           Foreground="#6C757D" 
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Progress Bar -->
            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <ProgressBar x:Name="MainProgressBar" 
                             Style="{StaticResource ModernProgressBarStyle}"
                             Minimum="0" 
                             Maximum="100" 
                             Value="0"/>

                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="ProgressText" 
                               Grid.Column="0"
                               Text="0%" 
                               FontSize="11" 
                               Foreground="#6C757D"
                               HorizontalAlignment="Left"/>
                    <TextBlock x:Name="CountText" 
                               Grid.Column="1"
                               Text="0 of 0 completed" 
                               FontSize="11" 
                               Foreground="#6C757D"
                               HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>

            <!-- Status Messages -->
            <Border Grid.Row="4" 
                    Background="#FAFBFC" 
                    CornerRadius="8" 
                    BorderBrush="#E9ECEF" 
                    BorderThickness="1"
                    Padding="12"
                    MaxHeight="120">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0"
                                  VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Disabled">
                        <TextBlock x:Name="LogText" 
                                   FontSize="11" 
                                   Foreground="#495057" 
                                   FontFamily="Consolas, Courier New"
                                   TextWrapping="Wrap"/>
                    </ScrollViewer>

                    <!-- Cancel Button -->
                    <Button Grid.Row="1" 
                            x:Name="CancelButton"
                            Content="Cancel" 
                            Width="100" 
                            Height="36"
                            Background="#6C757D" 
                            Foreground="White"
                            FontSize="13"
                            FontWeight="Medium"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,12,0,0"
                            HorizontalAlignment="Center"
                            Click="CancelButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8"
                                        Padding="16,8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#5A6268"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource SpinAnimation}"/>
        </EventTrigger>
    </Window.Triggers>
</Window>