<Window x:Class="Deaxo.AutoElevation.UI.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DEAXO Auto Elevation - Results"
        Height="754" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        FontFamily="Segoe UI"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="700">

    <Window.Resources>
        <!-- Main Card Style -->
        <Style x:Key="ResultsCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="32"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" Direction="270" ShadowDepth="8" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Icon Style -->
        <Style x:Key="SuccessIconStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Fill" Value="#D4EDDA"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Stats Card Style -->
        <Style x:Key="StatsCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="20,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- List Item Style -->
        <Style x:Key="ResultItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA"/>
                    <Setter Property="BorderBrush" Value="#007AFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Style="{StaticResource ResultsCardStyle}" Margin="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Success Icon -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,24">
                <!-- Brand -->
                <Border Background="#28A745" CornerRadius="6" Padding="12,6" Margin="0,0,0,16" HorizontalAlignment="Center">
                    <TextBlock Text="DEAXO" FontSize="14" FontWeight="Bold" Foreground="White"/>
                </Border>

                <!-- Success Icon -->
                <Grid>
                    <Ellipse Style="{StaticResource SuccessIconStyle}"/>
                    <TextBlock Text="✓" 
                               FontSize="40" 
                               FontWeight="Bold" 
                               Foreground="#28A745" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Grid>

                <TextBlock x:Name="TitleText" 
                           Text="Elevations Created Successfully!" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Foreground="#212529" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,8"/>

                <TextBlock x:Name="SubtitleText" 
                           Text="All elevation views and sheets have been generated" 
                           FontSize="14" 
                           Foreground="#6C757D" 
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Statistics Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource StatsCardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock x:Name="ElementCountText" 
                                   Text="0" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#007AFF" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Elements" 
                                   FontSize="12" 
                                   Foreground="#6C757D" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource StatsCardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock x:Name="ViewCountText" 
                                   Text="0" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#28A745" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Views" 
                                   FontSize="12" 
                                   Foreground="#6C757D" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource StatsCardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock x:Name="SheetCountText" 
                                   Text="0" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#FF6B35" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Sheets" 
                                   FontSize="12" 
                                   Foreground="#6C757D" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Style="{StaticResource StatsCardStyle}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock x:Name="DurationText" 
                                   Text="0s" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#6F42C1" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Duration" 
                                   FontSize="12" 
                                   Foreground="#6C757D" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Results Header -->
            <StackPanel Grid.Row="2" Margin="0,0,0,16">
                <TextBlock Text="Detailed Results" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="#212529" 
                           Margin="0,0,0,8"/>
                <TextBlock Text="Below are the details of all created elevation views and sheets:" 
                           FontSize="13" 
                           Foreground="#6C757D"/>
            </StackPanel>

            <!-- Results List -->
            <Border Grid.Row="3" 
                    Background="#FAFBFC" 
                    CornerRadius="12" 
                    BorderBrush="#E9ECEF" 
                    BorderThickness="1"
                    Padding="16">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="ResultsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ResultItemStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Success Icon -->
                                        <Border Grid.Column="0" 
                                                Background="#D4EDDA" 
                                                CornerRadius="12" 
                                                Width="24" Height="24" 
                                                Margin="0,0,12,0">
                                            <TextBlock Text="✓" 
                                                       FontSize="14" 
                                                       FontWeight="Bold" 
                                                       Foreground="#28A745" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Result Text -->
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding}" 
                                                   FontSize="13" 
                                                   FontFamily="Segoe UI" 
                                                   Foreground="#495057" 
                                                   VerticalAlignment="Center" 
                                                   TextWrapping="Wrap"/>

                                        <!-- Time Stamp -->
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding Tag}" 
                                                   FontSize="11" 
                                                   Foreground="#6C757D" 
                                                   VerticalAlignment="Center" 
                                                   Margin="8,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Action Buttons -->
            <Grid Grid.Row="4" Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Export Options -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="📋 Copy Results" 
                            Style="{StaticResource ModernButtonStyle}"
                            Background="#6C757D" 
                            Foreground="White"
                            Width="170"
                            Margin="0,0,12,0"
                            Click="CopyResults_Click"/>

                    <Button Content="💾 Export Log" 
                            Style="{StaticResource ModernButtonStyle}"
                            Background="#6C757D" 
                            Foreground="White"
                            Width="170"
                            Click="ExportLog_Click"/>
                </StackPanel>

                <!-- Close Button -->
                <Button Grid.Column="1" 
                        Content="Close" 
                        Style="{StaticResource ModernButtonStyle}"
                        Background="#007AFF" 
                        Foreground="White"
                        Width="120"
                        Click="Close_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>