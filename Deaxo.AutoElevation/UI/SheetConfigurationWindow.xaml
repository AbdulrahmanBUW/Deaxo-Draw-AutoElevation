<Window x:Class="Deaxo.AutoElevation.UI.SheetConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DEAXO Auto Elevation - Sheet Configuration"
        Height="620" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Main Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="32"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="6" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Radio Button Card Style -->
        <Style x:Key="OptionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FAFBFC"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA"/>
                    <Setter Property="BorderBrush" Value="#007AFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Selected Option Card Style -->
        <Style x:Key="SelectedOptionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="BorderBrush" Value="#007AFF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>

        <!-- Modern Radio Button Style -->
        <Style x:Key="ModernRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid>
                            <Border x:Name="OptionBorder" Style="{StaticResource OptionCardStyle}">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Radio Circle -->
                                        <Border Grid.Column="0" x:Name="radioBorder" 
                                                Width="20" Height="20" 
                                                CornerRadius="10"
                                                BorderBrush="#CED4DA" 
                                                BorderThickness="2"
                                                Background="White"
                                                Margin="0,0,16,0"
                                                VerticalAlignment="Top">
                                            <Ellipse x:Name="radioMark"
                                                     Width="8" Height="8"
                                                     Fill="White"
                                                     Visibility="Collapsed"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Content -->
                                        <ContentPresenter Grid.Column="1" VerticalAlignment="Top"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="OptionBorder" Property="Style" Value="{StaticResource SelectedOptionCardStyle}"/>
                                <Setter TargetName="radioBorder" Property="Background" Value="#007AFF"/>
                                <Setter TargetName="radioBorder" Property="BorderBrush" Value="#007AFF"/>
                                <Setter TargetName="radioMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="20,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Style="{StaticResource CardStyle}" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,24">
                <Border Background="#007AFF" CornerRadius="6" Padding="12,6" Margin="0,0,0,16" HorizontalAlignment="Center">
                    <TextBlock Text="DEAXO" FontSize="14" FontWeight="Bold" Foreground="White"/>
                </Border>
                <TextBlock Text="Sheet Configuration" 
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Foreground="#212529" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Choose how you want to organize your elevation views" 
                           FontSize="14" 
                           Foreground="#6C757D" 
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Options -->
            <StackPanel Grid.Row="1" Margin="0,0,0,20">

                <!-- No Sheets Option -->
                <RadioButton x:Name="NoSheetsRadio" 
                             GroupName="SheetOptions"
                             Style="{StaticResource ModernRadioButtonStyle}"
                             Checked="RadioButton_Checked">
                    <StackPanel>
                        <TextBlock Text="📋 Views Only (No Sheets)" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="#212529"
                                   Margin="0,0,0,8"/>
                    </StackPanel>
                </RadioButton>

                <!-- Individual Sheets Option -->
                <RadioButton x:Name="IndividualSheetsRadio" 
                             GroupName="SheetOptions"
                             Style="{StaticResource ModernRadioButtonStyle}"
                             IsChecked="True"
                             Checked="RadioButton_Checked">
                    <StackPanel>
                        <TextBlock Text="📄 Individual Sheets" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="#212529"
                                   Margin="0,0,0,8"/>
                    </StackPanel>
                </RadioButton>

                <!-- Combined Sheet Option -->
                <RadioButton x:Name="CombinedSheetRadio" 
                             GroupName="SheetOptions"
                             Style="{StaticResource ModernRadioButtonStyle}"
                             Checked="RadioButton_Checked">
                    <StackPanel>
                        <TextBlock Text="📑 Combined Sheet" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="#212529"
                                   Margin="0,0,0,8"/>
                    </StackPanel>
                </RadioButton>
            </StackPanel>

            <!-- Action Buttons -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Preview Text -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock x:Name="PreviewText" 
                               Text="Individual sheets will be created for each view" 
                               FontSize="12" 
                               Foreground="#6C757D" Width="330"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Cancel" 
                            Width="100" 
                            Background="#6C757D" 
                            Foreground="White"
                            Style="{StaticResource ModernButtonStyle}"
                            Margin="0,0,12,0"
                            Click="Cancel_Click"/>
                    <Button Content="Continue" 
                            Width="120" 
                            Background="#007AFF" 
                            Foreground="White"
                            Style="{StaticResource ModernButtonStyle}"
                            Click="Continue_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>